{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Poster</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row d-flex justify-content-between">
        <a class="btn btn-primary" href="{{ path('program_new') }}"><h3>Create new Program</h3></a>
        <a class="btn btn-primary" href="{{ path('season_index') }}"><h3>Go to Seasons</h3></a>
        <a class="btn btn-primary" href="{{ path('episode_index') }}"><h3>Go to Episodes</h3></a>
        <a class="btn btn-primary" href="{{ path('category_add') }}"><h3>Go to Category</h3></a>
    </div>
{% endblock %}
