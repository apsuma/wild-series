{% extends 'base.html.twig' %}

{% block title %}Actor Route{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des acteurs âœ…</h1>
    {% for actor in actors %}
        <h2>{{ actor.id }} <a href="{{ path('actor_details', {'name': actor.name}) }}">{{ actor.name }}</a></h2>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
            </tr>
            </thead>
            <tbody>
            {% for program in actor.programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endfor %}

</div>
{% endblock %}
