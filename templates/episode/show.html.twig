{% extends 'base.html.twig' %}

{% block title %}Episode : {{ episode.title }}{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Season inside Program {{ episode.season.program.title }}</th>
                <td>{{ episode.season.description }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        {{ form(commentForm) }}
    </div>
    <div class="row d-flex justify-content-between">
        <a class="btn btn-primary" href="{{ path('episode_index') }}">back to list</a>

        <a class="btn btn-primary" href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
{% endblock %}
