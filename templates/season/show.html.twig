{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season from {{ season.program.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <strong>Episode(s) :</strong>
    <ul>
        {% for episode in season.episodes %}
            <li><a href="{{ path('episode_show', {'id': episode.id}) }}">{{ episode.title }}</a></li>
        {% else %}
            <li>Aucun Ã©pisode pour cette saison</li>
        {% endfor %}
    </ul>
    <a href="{{ path('season_index') }}">back to list</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
