{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }} from the program <a href="{{ path('program_show', {'slug': season.program.slug}) }}">{{ season.program.title }}</a></td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}"><h3>Create new Season</h3></a>
    <a href="{{ path('program_index') }}"><h3>Go to Programs</h3></a>
    <a href="{{ path('episode_index') }}"><h3>Go to Episodes</h3></a>
    <a href="{{ path('category_add') }}"><h3>Go to Category</h3></a>
{% endblock %}
